{
  "name": "@adonisjs/framework",
  "version": "4.0.2",
  "description": "Adonis framework makes it easy for you to write webapps with less code",
  "main": "index.js",
  "scripts": {
    "lint": "standard",
    "pretest": "npm run lint",
    "posttest": "npm run coverage",
    "test:local": "FORCE_COLOR=true node bin/index.js --local",
    "test": "nyc npm run test:local",
    "test:win": "set FORCE_COLOR=true && node bin/index.js --win",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "standard": {
    "global": [
      "use"
    ]
  },
  "keywords": [
    "adonis-framework",
    "mvc",
    "mvc-framework"
  ],
  "author": "adonisjs",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/fold": "^4.0.0",
    "@adonisjs/sink": "^1.0.8",
    "cookie-signature": "^1.0.6",
    "coveralls": "^2.13.1",
    "cz-conventional-changelog": "^2.0.0",
    "fs-extra": "^4.0.0",
    "japa": "^1.0.3",
    "japa-cli": "^1.0.1",
    "nyc": "^11.0.2",
    "pify": "^3.0.0",
    "semver": "^5.3.0",
    "simple-encryptor": "^1.1.0",
    "standard": "^10.0.2",
    "supertest": "^3.0.0",
    "test-console": "^1.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "co-compose": "^3.0.0",
    "dotenv": "^4.0.0",
    "edge.js": "^1.0.1",
    "eventemitter2": "^4.1.0",
    "haye": "^1.0.1",
    "lodash": "^4.17.4",
    "macroable": "^1.0.0",
    "node-cookie": "^2.0.0",
    "node-exceptions": "^2.0.2",
    "node-req": "^2.0.1",
    "node-res": "^4.0.0",
    "path-to-regexp": "^1.7.0",
    "require-all": "^2.2.0",
    "resetable": "^1.0.2",
    "serve-static": "^1.12.3",
    "upcast": "^1.0.4",
    "useragent": "^2.1.13",
    "winston": "^2.3.1",
    "youch": "^2.0.5"
  },
  "nyc": {
    "include": [
      "src",
      "lib"
    ],
    "exclude": [
      "src/Logger/index.js"
    ]
  },
  "nyc": {
    "include": [
      "src",
      "lib"
    ],
    "exclude": [
      "src/Logger/index.js"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adonisjs/adonis-framework.git"
  },
  "bugs": {
    "url": "https://github.com/adonisjs/adonis-framework/issues"
  },
  "homepage": "https://github.com/adonisjs/adonis-framework#readme",
  "bin": {
    "framework": "index.js"
  }
}
